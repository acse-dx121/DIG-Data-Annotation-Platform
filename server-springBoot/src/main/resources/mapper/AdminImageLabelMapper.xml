<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.uestc.labelproject.dao.AdminImageLabelMapper">

    <resultMap id="BaseResultMap" type="com.uestc.labelproject.entity.Label">
        <id column="label_id" jdbcType="BIGINT" property="labelId"/>
        <result column="label_name" jdbcType="VARCHAR" property="labelName"/>
        <result column="label_type" jdbcType="INTEGER" property="labelType"/>
        <result column="label_color" jdbcType="VARCHAR" property="labelColor"/>
    </resultMap>
    <sql id="insertKey">
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="labelId != null">
                label_id,
            </if>
            <if test="labelName != null">
                label_name,
            </if>
            <if test="labelType != null">
                label_type,
            </if>
            <if test="labelColor != null">
                label_color,
            </if>
        </trim>
    </sql>
    <sql id="insertValue">
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="labelId != null">
                #{labelId},
            </if>
            <if test="labelName!=null">
                #{labelName},
            </if>
            <if test="labelType != null">
                #{labelType},
            </if>
            <if test="labelColor != null">
                #{labelColor},
            </if>
        </trim>
    </sql>
    <select id="getLabelList" resultMap="BaseResultMap">
        select * from imagelabel
    </select>

    <select id="findByLabelName" parameterType="String" resultMap="BaseResultMap">
        select * from imagelabel where label_name = #{labelName}
    </select>

    <update id="editLabel" parameterType="com.uestc.labelproject.entity.Label">
        update imagelabel
        <set>
            <trim>
            <if test="labelName != null">
                label_name = #{labelName},
            </if>
            <if test="labelType != null">
                label_type = #{labelType},
            </if>
            <if test="labelColor != null">
                label_color = #{labelColor},
            </if>
            </trim>
        </set>
            where label_id = #{labelId}
    </update>

    <insert id="addLabel" parameterType="com.uestc.labelproject.entity.Label">
        insert into imagelabel <include refid="insertKey"/> <include refid="insertValue"/>
    </insert>

    <delete id="deleteLabel" parameterType="Long">
        delete from imagelabel where label_id = #{labelId}
    </delete>
    <select id="getLabelByImageId" parameterType="Long" resultMap="BaseResultMap">
        select * from imagelabel where label_id in (select label_id from tasklabelinfo where task_id = (select task_id from image where image_id = #{imageId}))
    </select>

    <select id="searchLabel" parameterType="String" resultMap="BaseResultMap">
        select * from imagelabel where label_name like concat('%',#{keyword},'%')
    </select>
</mapper>